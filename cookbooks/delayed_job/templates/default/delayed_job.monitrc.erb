check process delayed_job_<%= @app_name %>
  with pidfile /var/run/delayed_job/<%= @app_name %>.pid
  start program = "/data/<%= @app_name %>/current/script/delayed_job -e <%= @node[:environment][:framework_env] %> restart" as uid <%= @user %> and gid <%= @user %>
  stop program = "/data/<%= @app_name %>/current/script/delayed_job -e <%= @node[:environment][:framework_env] %> stop" as uid <%= @user %> and gid <%= @user %>
  group <%= @app_name %>